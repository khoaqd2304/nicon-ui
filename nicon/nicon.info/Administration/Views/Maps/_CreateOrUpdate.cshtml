@using Nop.Core.Domain.Maps
@model Map

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
<style>
    .maps-api {
        height: 350px;
    }
    #pac-input {
        top: 15px !important;
        width: 50%;
    }
    .delete-maps{
        margin-left:5px;
    }
</style>
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.Title)
                    @Html.HiddenFor(model => model.Location)


















                </div>
                <div class="col-md-9">
                    <strong style="font-size:16px;">@Model.Title</strong>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.IsActive)
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.IsActive)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.CreateDate)
                </div>
                <div class="col-md-9">
                    @Model.CreateDate.ToString("dd/MM/yyyy")
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="hidden" id="lat"></label>
                            <label class="hidden" id="long"></label>
                            <input id="pac-input" class="controls form-control" type="text" placeholder="Search location">
                            <div id="map-api" class="maps-api"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group margin-t-5">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.Location)
                </div>
                <div class="col-md-9">
                    <div class="form-group">
                        <div class="col-md-12 margin-t-10">
                            <div class="row">
                                <div class="col-md-3 text-center">
                                    <button class="btn btn-success btn-sm btn-add-location">@T("Add.Location")</button> 
                                </div>
                                <div class="col-md-9">
                                    <input class="form-control name-address" maxlength="100" placeholder="Name address..." />
                                </div>
                            </div>
                            <ul class="list-maps-location">
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



